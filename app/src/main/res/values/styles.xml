<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarTheme">@style/MyActionBar</item>


    </style>

    <style name="MyActionBar" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.StatusBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Headline</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppThemeMovieDetails" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
    </style>


    <style name="MovieItem" parent="CardView">
        <item name="android:layout_margin">@dimen/item_spacing_half</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">4dp</item>
    </style>



    <style name="ThemeOverlay.Shrine.BottomNavigation" parent="">
        <item name="colorPrimary">?attr/colorAccent</item>
    </style>

</resources>
